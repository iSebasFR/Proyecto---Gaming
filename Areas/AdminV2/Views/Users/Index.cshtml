@model IEnumerable<Proyecto_Gaming.Areas.AdminV2.ViewModels.UserListViewModel>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid">

    <!-- ✅ Título + Botón de acceso a estadísticas -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white m-0">Gestión de Usuarios</h1>

        <a asp-area="AdminV2" asp-controller="Stats" asp-action="Index"
           class="btn btn-outline-info btn-lg">
            <i class="bi bi-bar-chart-fill me-1"></i> Informes y Estadísticas
        </a>
    </div>

    <div class="card bg-dark border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th style="width:220px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@(user.Name ?? "(sin nombre)")</td>
                                <td>@(user.Email ?? "(sin email)")</td>
                                <td>@(user.Role ?? "Usuario")</td>
                                <td>
                                    <span class="badge @(user.IsActive ? "bg-success" : "bg-danger")">
                                        @(user.IsActive ? "Activo" : "Bloqueado")
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@user.Id"
                                       class="btn btn-info btn-sm me-2">Ver Perfil</a>

                                    <form asp-action="ToggleLock" asp-route-id="@user.Id"
                                          method="post" class="d-inline">
                                        <button type="submit"
                                                class="btn @(user.IsActive ? "btn-warning" : "btn-success") btn-sm">
                                            @(user.IsActive ? "Bloquear" : "Desbloquear")
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
