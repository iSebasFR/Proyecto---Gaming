@using Proyecto_Gaming.Models.Surveys
@model IEnumerable<Survey>

@{
    ViewData["Title"] = "Encuestas";
}

<!-- üé® DISE√ëO PROFESIONAL MEJORADO -->
<div class="container-fluid">
    <!-- Header Corporativo -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-white mb-2">üìä Panel de Encuestas</h1>
            <p class="text-muted mb-0">Sistema integral de gesti√≥n y administraci√≥n de encuestas</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fa fa-plus me-2"></i> Nueva Encuesta
        </a>
    </div>

    <!-- M√©tricas Ejecutivas -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card bg-dark border-start border-primary border-4 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-primary fw-bold display-6">@Model.Count()</div>
                            <div class="text-light small fw-semibold">TOTAL ENCUESTAS</div>
                        </div>
                        <div class="text-primary fs-1 opacity-75">
                            <i class="fa-solid fa-clipboard-list"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card bg-dark border-start border-success border-4 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-success fw-bold display-6">@Model.Count(s => s.EndDate.HasValue && s.EndDate > DateTime.UtcNow)</div>
                            <div class="text-light small fw-semibold">ENCUESTAS ACTIVAS</div>
                        </div>
                        <div class="text-success fs-1 opacity-75">
                            <i class="fa-solid fa-play-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card bg-dark border-start border-warning border-4 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-warning fw-bold display-6">@Model.Count(s => s.EndDate.HasValue && s.EndDate <= DateTime.UtcNow)</div>
                            <div class="text-light small fw-semibold">FINALIZADAS</div>
                        </div>
                        <div class="text-warning fs-1 opacity-75">
                            <i class="fa-solid fa-flag-checkered"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card bg-dark border-start border-info border-4 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-info fw-bold display-6">@Model.Count(s => !s.EndDate.HasValue)</div>
                            <div class="text-light small fw-semibold">SIN FECHA L√çMITE</div>
                        </div>
                        <div class="text-info fs-1 opacity-75">
                            <i class="fa-solid fa-infinity"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Panel Principal -->
    <div class="card bg-dark border-0 shadow-lg">
        <div class="card-header bg-dark border-bottom border-secondary py-4">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="text-white mb-0 fw-bold">
                    <i class="fa-solid fa-table-cells-large me-3"></i>Registro de Encuestas
                </h4>
                <div class="d-flex gap-3">
                    <button class="btn btn-outline-light">
                        <i class="fa-solid fa-download me-2"></i> Exportar
                    </button>
                    <button class="btn btn-outline-light">
                        <i class="fa-solid fa-filter me-2"></i> Filtros
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            
            <!-- ‚úÖ TU C√ìDIGO ORIGINAL MANTENIDO INTACTO -->
            <table class="table table-dark table-striped align-middle">
                <thead>
                    <tr>
                        <th>T√≠tulo</th>
                        <th>Vigencia (UTC)</th>
                        <th>Medalla</th>
                        <th>Preguntas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.Title</td>
                            <td>
                                @s.StartDate.ToString("dd/MM/yyyy HH:mm 'UTC'")
                                -
                                @(
                                    s.EndDate.HasValue
                                    ? s.EndDate.Value.ToString("dd/MM/yyyy HH:mm 'UTC'")
                                    : "Sin fin"
                                )
                            </td>
                            <td>@(s.Medal?.Name ?? "-")</td>
                            <td>@(s.Questions?.Count ?? 0)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- ‚úÖ FIN DE TU C√ìDIGO ORIGINAL -->

        </div>
    </div>

    <!-- Informaci√≥n del Sistema -->
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card bg-dark border-secondary">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4 border-end border-secondary">
                            <div class="text-success fw-bold fs-2">@Model.Count(s => s.EndDate.HasValue && s.EndDate > DateTime.UtcNow)</div>
                            <small class="text-muted">En Curso</small>
                        </div>
                        <div class="col-4 border-end border-secondary">
                            <div class="text-warning fw-bold fs-2">@Model.Count(s => !s.EndDate.HasValue)</div>
                            <small class="text-muted">Permanentes</small>
                        </div>
                        <div class="col-4">
                            <div class="text-info fw-bold fs-2">@Model.Count(s => s.EndDate.HasValue && s.EndDate <= DateTime.UtcNow)</div>
                            <small class="text-muted">Completadas</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-dark border-secondary">
                <div class="card-body text-center">
                    <div class="text-light mb-2">
                        <i class="fa-solid fa-database me-2"></i>
                        <strong>@Model.Count()</strong> registros totales
                    </div>
                    <div class="text-muted small">
                        <i class="fa-solid fa-clock me-2"></i>
                        Actualizado: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-start {
        border-left-width: 4px !important;
    }
    
    .card {
        border: 1px solid #2d3748 !important;
        transition: transform 0.2s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .display-6 {
        font-size: 2.5rem;
    }
    
    .table {
        margin-bottom: 0;
    }
    
    .table th {
        background-color: #374151 !important;
        border-bottom: 2px solid #4B5563 !important;
        padding: 1rem 0.75rem;
        font-weight: 600;
    }
    
    .table td {
        padding: 1rem 0.75rem;
        vertical-align: middle;
    }
</style>