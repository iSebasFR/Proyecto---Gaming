@using Proyecto_Gaming.Models.Surveys
@model IEnumerable<Survey>

@{
    ViewData["Title"] = "Encuestas";
}

<h1 class="text-white mb-4"><i class="fa-solid fa-list-check me-2"></i>Encuestas</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus me-1"></i> Nueva encuesta</a>
</div>

<table class="table table-dark table-striped align-middle">
    <thead>
        <tr>
            <th>Título</th>
            <th>Vigencia (UTC)</th>
            <th>Medalla</th>
            <th>Preguntas</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Title</td>
            <td>@s.StartDateUtc:yyyy-MM-dd HH:mm:ss → @s.EndDateUtc:yyyy-MM-dd HH:mm:ss</td>
            <td>@(s.Medal?.Name ?? "-")</td>
            <td>@(s.Questions?.Count ?? 0)</td>
        </tr>
    }
    </tbody>
</table>
