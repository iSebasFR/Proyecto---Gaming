@model Proyecto_Gaming.ViewModels.GameCatalogViewModel

@{
    ViewData["Title"] = "Cat√°logo de Juegos";
}

<!-- Segunda Navbar (Secundaria) -->
<nav class="navbar navbar-expand-lg mb-4" style="background-color: #B62DCE; border-radius: 25px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); height: 50px; padding: 5px 0; max-width: 650px; margin: 0 auto;">
    <div class="container-fluid justify-content-center">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white fw-bold" asp-action="Pendientes">Pendiente</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white fw-bold" asp-action="Jugando">Jugando</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white fw-bold" asp-action="Completados">Completados</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white fw-bold active" asp-action="Index">Cat√°logo</a>
            </li>
        </ul>
    </div>
</nav>

<!-- ‚úÖ B√öSQUEDA POR NOMBRE Y BOTONES DE SESI√ìN MEJORADOS -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card bg-dark">
            <div class="card-body">
                <!-- Formulario de B√∫squeda -->
                <form asp-action="Index" method="get" class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label text-white">üîç Buscar por nombre:</label>
                        <input type="text" name="search" class="form-control" 
                               value="@Model.Search" placeholder="Ej: The Witcher, Mario...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label text-white">üéÆ G√©nero:</label>
                        <select name="genre" class="form-select">
                            <option value="">Todos los g√©neros</option>
                            @foreach (var genre in Model.AvailableGenres)
                            {
                                <option value="@genre.Value" selected="@genre.Selected">@genre.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label text-white">üñ•Ô∏è Plataforma:</label>
                        <select name="platform" class="form-select">
                            <option value="">Todas las plataformas</option>
                            @foreach (var platform in Model.AvailablePlatforms)
                            {
                                <option value="@platform.Value" selected="@platform.Selected">@platform.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100 h-100">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                </form>

                <!-- ‚úÖ BOTONES MEJORADOS -->
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex gap-2 flex-wrap">
                            <!-- ‚úÖ B√öSQUEDA ANTERIOR (SOLO cuando hay disponible) -->
                            @if (Model.HasPreviousSearch)
                            {
                                <a href="@Url.Action("LastSearch")" class="btn btn-outline-info btn-sm">
                                    üîÑ B√∫squeda Anterior
                                </a>
                            }

                            <!-- Recomendaciones -->
                            <a href="@Url.Action("Recomendaciones")" class="btn btn-outline-warning btn-sm">
                                üí° Recomendaciones ML
                            </a>
                            
                            <!-- Limpiar Filtros -->
                            @if (!string.IsNullOrEmpty(Model.Search) || !string.IsNullOrEmpty(Model.SelectedGenre) || !string.IsNullOrEmpty(Model.SelectedPlatform))
                            {
                                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                    üóëÔ∏è Limpiar Filtros
                                </a>
                            }

                            <!-- B√∫squedas Recientes Dropdown -->
                            @if (Model.RecentSearchTerms.Any())
                            {
                                <div class="dropdown">
                                    <button class="btn btn-outline-success btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        üìö Historial (@Model.RecentSearchTerms.Count)
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><h6 class="dropdown-header">Tus b√∫squedas recientes:</h6></li>
                                        @foreach (var recentSearch in Model.RecentSearchTerms)
                                        {
                                            <li>
                                                <a class="dropdown-item" href="@Url.Action("Index", new { search = recentSearch })">
                                                    <i class="fas fa-search me-2"></i>@recentSearch
                                                </a>
                                            </li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="@Url.Action("ClearSearchHistory")">
                                                <i class="fas fa-trash me-2"></i>Limpiar historial
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- ‚úÖ INFO DE SESI√ìN ACTUAL -->
                @if (!string.IsNullOrEmpty(Model.Search) || !string.IsNullOrEmpty(Model.SelectedGenre) || !string.IsNullOrEmpty(Model.SelectedPlatform))
                {
                    <div class="row mt-2">
                        <div class="col-12">
                            <div class="alert alert-info py-2 mb-0">
                                <small>
                                    <strong>Filtros activos:</strong>
                                    @if (!string.IsNullOrEmpty(Model.Search))
                                    {
                                        <span class="badge bg-primary me-1">Busqueda: "@Model.Search"</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.SelectedGenre))
                                    {
                                        <span class="badge bg-success me-1">G√©nero: @Model.AvailableGenres.FirstOrDefault(g => g.Value == Model.SelectedGenre)?.Text</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.SelectedPlatform))
                                    {
                                        <span class="badge bg-warning me-1">Plataforma: @Model.AvailablePlatforms.FirstOrDefault(p => p.Value == Model.SelectedPlatform)?.Text</span>
                                    }
                                    <small class="text-muted ms-2">(Guardado en sesi√≥n)</small>
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Juegos desde RAWG API -->
@if (Model.Games.Any())
{
    <div class="row">
        @foreach (var game in Model.Games)
        {
            <div class="col-md-4 mb-4">
                <div class="game-card card h-100 shadow">
                    <img src="@game.BackgroundImage" class="card-img-top" alt="@game.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@game.Name</h5>
                        <p class="card-text">
                            @if (game.Released != null)
                            {
                                <small class="text-muted">Lanzamiento: @DateTime.Parse(game.Released).ToString("yyyy")</small>
                            }
                        </p>
                        <p class="card-text">
                            @foreach (var genre in game.Genres.Take(2))
                            {
                                <span class="badge bg-primary me-1">@genre.Name</span>
                            }
                            @foreach (var platform in game.Platforms.Take(2))
                            {
                                <span class="badge bg-secondary me-1">@platform.Platform.Name</span>
                            }
                        </p>
                        <div class="game-rating mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= game.Rating)
                                {
                                    <i class="fas fa-star text-warning"></i>
                                }
                                else if (i - 0.5 <= game.Rating)
                                {
                                    <i class="fas fa-star-half-alt text-warning"></i>
                                }
                                else
                                {
                                    <i class="far fa-star text-warning"></i>
                                }
                            }
                            <span class="ms-1">@game.Rating.ToString("0.0")</span>
                        </div>

                        <!-- Botones -->
                        <a asp-action="Detalles" asp-route-id="@game.Id" class="btn btn-primary w-100 mb-2">Ver detalles</a>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="AddToLibrary" asp-route-id="@game.Id" class="btn btn-success w-48">A√±adir a biblioteca</a>
                            <a href="#" class="btn" style="background-color: #B62DCE; color: white; width: 48%;">Comprar juego</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Paginaci√≥n - SOLO 5 P√ÅGINAS M√ÅXIMO -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <!-- Bot√≥n Anterior -->
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = Model.Search,
                            genre = Model.SelectedGenre, 
                            platform = Model.SelectedPlatform, 
                            page = Model.CurrentPage - 1 
                        })">Anterior</a>
                    </li>
                }
                
                <!-- SOLO 5 p√°ginas m√°ximo -->
                @for (int i = 1; i <= Math.Min(5, Model.TotalPages); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = Model.Search,
                            genre = Model.SelectedGenre, 
                            platform = Model.SelectedPlatform, 
                            page = i 
                        })">@i</a>
                    </li>
                }

                <!-- Bot√≥n Siguiente -->
                @if (Model.CurrentPage < 5 && Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = Model.Search,
                            genre = Model.SelectedGenre, 
                            platform = Model.SelectedPlatform, 
                            page = Model.CurrentPage + 1 
                        })">Siguiente</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="alert alert-info text-center">
        <h4>No se encontraron juegos</h4>
        <p>Intenta con otros criterios de b√∫squeda</p>
        @if (!string.IsNullOrEmpty(Model.Search))
        {
            <p>Buscaste: <strong>"@Model.Search"</strong></p>
        }
        <a asp-action="Index" class="btn btn-primary">Ver todos los juegos</a>
    </div>
}

@section Styles {
    <style>
        .game-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: none;
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            color: white;
        }
        
        .game-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }
        
        .game-rating {
            font-size: 1.1rem;
        }

        .w-48 {
            width: 48% !important;
        }

        .btn-primary {
            height: 42px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .badge {
            font-size: 0.7em;
        }
    </style>
}