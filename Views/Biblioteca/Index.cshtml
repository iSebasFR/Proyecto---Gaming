@model IEnumerable<Proyecto_Gaming.Models.Juego>

@{
    ViewData["Title"] = "Catálogo de Juegos";
}

<!-- Segunda Navbar (Secundaria) - Estilo mejorado con reducción de ancho -->
<nav class="navbar navbar-expand-lg" style="background-color: #B62DCE; border-radius: 25px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); height: 50px; padding: 5px 0; max-width: 650px; margin: 0 auto;">
    <div class="container-fluid justify-content-center">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white" href="#">Pendiente</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="#">Jugando</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="#">Completados</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="#">Catálogo</a>
            </li>
        </ul>
    </div>
</nav>

<!-- Filtros -->
<div class="filter-section bg-dark rounded p-4 mb-4">
    <form asp-action="Index" method="get" class="row g-3">
        <div class="col-md-4">
            <label class="form-label text-white">Filtrar por categoría:</label>
            <select name="categoria" class="form-select" onchange="this.form.submit()">
                <option value="">Todas las categorías</option>
                @foreach (var categoria in ViewBag.Categorias as List<string>)
                {
                    <option value="@categoria" selected="@(ViewBag.CategoriaSeleccionada == categoria)">@categoria</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label text-white">Filtrar por plataforma:</label>
            <select name="plataforma" class="form-select" onchange="this.form.submit()">
                <option value="">Todas las plataformas</option>
                @foreach (var plataforma in ViewBag.Plataformas as List<string>)
                {
                    <option value="@plataforma" selected="@(ViewBag.PlataformaSeleccionada == plataforma)">@plataforma</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label text-white">Buscar por nombre:</label>
            <div class="input-group">
                <input type="text" name="busqueda" class="form-control" placeholder="Nombre del juego" value="@ViewBag.Busqueda">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
            </div>
        </div>
    </form>
</div>

<!-- Juegos -->
@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="game-card card h-100 shadow">
                    <img src="@item.Imagen" class="card-img-top" alt="@item.Nombre" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">
                            <span class="badge bg-primary">@item.Categoria</span>
                            <span class="badge bg-secondary">@item.Plataforma</span>
                        </p>
                        <div class="game-rating mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= item.PuntuacionMedia)
                                {
                                    <i class="fas fa-star text-warning"></i>
                                }
                                else if (i - 0.5m <= item.PuntuacionMedia)
                                {
                                    <i class="fas fa-star-half-alt text-warning"></i>
                                }
                                else
                                {
                                    <i class="far fa-star text-warning"></i>
                                }
                            }
                            <span class="ms-1">@item.PuntuacionMedia?.ToString("0.0")</span>
                        </div>

                        <!-- Botón "Ver detalles" -->
                        <a asp-action="Detalles" asp-route-id="@item.IdJuego" class="btn btn-primary w-100 mb-2">Ver detalles</a>

                        <!-- Botones en la misma línea para "Añadir a biblioteca" y "Comprar juego" -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="AddToLibrary" asp-route-id="@item.IdJuego" class="btn btn-success w-48">Añadir a biblioteca</a>
                            <a asp-action="Comprar" asp-route-id="@item.IdJuego" class="btn" style="background-color: #B62DCE; color: white; width: 48%;">Comprar juego</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <h4>No se encontraron juegos</h4>
        <p>Intenta con otros criterios de búsqueda</p>
    </div>
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #6c5ce7, #8e44ad);
            color: white;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .header {
            padding: 2rem 0;
        }
        
        .game-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: none;
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            color: white;
        }
        
        .game-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }
        
        .game-rating {
            font-size: 1.1rem;
        }
        
        .filter-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
        }

        /* Estilos para los botones en la misma línea */
        .d-flex .btn {
            margin-right: 5px; /* Separación entre los botones */
        }
    </style>
}
