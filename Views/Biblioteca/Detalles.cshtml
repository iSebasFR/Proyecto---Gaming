@model Proyecto_Gaming.Models.Juego

@{
    ViewData["Title"] = "Detalles del Juego";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Imagen" class="img-fluid rounded shadow" alt="@Model.Nombre">
        </div>
        <div class="col-md-8">
            <h1>@Model.Nombre</h1>
            <div class="mb-3">
                <span class="badge bg-primary me-2">@Model.Categoria</span>
                <span class="badge bg-secondary">@Model.Plataforma</span>
            </div>
            <div class="game-rating mb-3">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Model.PuntuacionMedia)
                    {
                        <i class="fas fa-star text-warning fa-lg"></i>
                    }
                    else if (i - 0.5m <= Model.PuntuacionMedia)
                    {
                        <i class="fas fa-star-half-alt text-warning fa-lg"></i>
                    }
                    else
                    {
                        <i class="far fa-star text-warning fa-lg"></i>
                    }
                }
                <span class="ms-2 fs-5">@Model.PuntuacionMedia?.ToString("0.0") / 5.0</span>
            </div>
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-2"></i>Volver al cat√°logo
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #6c5ce7, #8e44ad);
            color: white;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
}