@model Proyecto_Gaming.Models.Rawg.Game

@{
    ViewData["Title"] = "Detalles del Juego";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.BackgroundImage" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <h1>@Model.Name</h1>
            
            @if (!string.IsNullOrEmpty(Model.Released))
            {
                <p><strong>Fecha de lanzamiento:</strong> @DateTime.Parse(Model.Released).ToString("dd/MM/yyyy")</p>
            }
            
            <p><strong>Rating:</strong> @Model.Rating.ToString("0.0")/5.0</p>
            
            @if (Model.Metacritic.HasValue)
            {
                <p><strong>Metacritic:</strong> @Model.Metacritic</p>
            }
            
            <p><strong>Géneros:</strong>
                @foreach (var genre in Model.Genres)
                {
                    <span class="badge bg-primary me-1">@genre.Name</span>
                }
            </p>
            
            <p><strong>Plataformas:</strong>
                @foreach (var platform in Model.Platforms)
                {
                    <span class="badge bg-secondary me-1">@platform.Platform.Name</span>
                }
            </p>

            <div class="mt-4">
                <a asp-action="AddToLibrary" asp-route-id="@Model.Id" class="btn btn-success">Añadir a mi biblioteca</a>
                <a asp-action="Index" class="btn btn-secondary">Volver al catálogo</a>
            </div>
        </div>
    </div>
</div>