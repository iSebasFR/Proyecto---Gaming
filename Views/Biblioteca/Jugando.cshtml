@model List<Proyecto_Gaming.Models.BibliotecaUsuario>

@{
    ViewData["Title"] = "Juegos en Progreso";
}

<!-- Segunda Navbar (Secundaria) -->
<nav class="navbar navbar-expand-lg mb-4" style="background-color: #B62DCE; border-radius: 25px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); height: 50px; padding: 5px 0; max-width: 650px; margin: 0 auto;">
    <div class="container-fluid justify-content-center">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white fw-bold" asp-action="Pendientes">Pendiente</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white fw-bold active" asp-action="Jugando">Jugando</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white fw-bold" asp-action="Completados">Completados</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white fw-bold" asp-action="Index">Catálogo</a>
            </li>
        </ul>
    </div>
</nav>

<h2 class="text-center mb-4">Juegos en Progreso</h2>

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="game-card card h-100 shadow">
                    <img src="@item.GameImage" class="card-img-top" alt="@item.GameName" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.GameName</h5>
                        <p class="card-text">
                            <span class="badge bg-warning">@item.Estado</span>
                        </p>
                        
                        <div class="d-flex justify-content-between flex-wrap">
                            <a asp-action="MarkAsCompleted" asp-route-id="@item.RawgGameId" class="btn btn-success mb-2 w-100">Marcar como Completado</a>
                            <a asp-action="Detalles" asp-route-id="@item.RawgGameId" class="btn btn-primary w-48">Ver Detalles</a>
                            <a asp-action="Pendientes" class="btn btn-secondary w-48">Volver a Pendientes</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <h4>No tienes juegos en progreso</h4>
        <p>¡Comienza a jugar algunos de tus juegos pendientes!</p>
        <a asp-action="Pendientes" class="btn btn-primary">Ver Pendientes</a>
    </div>
}

@section Styles {
    <style>
        .game-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: none;
            border-radius: 15px;
            color: white;
        }
        
        .w-48 {
            width: 48% !important;
        }
    </style>
}