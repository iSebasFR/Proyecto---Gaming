@model Proyecto_Gaming.ViewModels.ConfiguracionViewModel
@{
    ViewData["Title"] = "Configuración del Perfil";
}

<div class="container config-container">
    <div class="row">
        <!-- Sidebar de Navegación Mejorado -->
        <div class="col-md-3">
            <div class="card config-sidebar">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="avatar-container mb-3">
                            @if (!string.IsNullOrEmpty(Model.FotoPerfilUrl))
                            {
                                <img src="@Model.FotoPerfilUrl" class="avatar-img" alt="Avatar">
                                <div class="avatar-status online"></div>
                            }
                            else
                            {
                                <div class="avatar-placeholder">
                                    <i class="fas fa-user fa-2x"></i>
                                </div>
                                <div class="avatar-status online"></div>
                            }
                        </div>
                        <h5 class="user-name mb-1">@Model.UserName</h5>
                        <small class="user-since">Miembro desde @DateTime.Now.ToString("MM/yyyy")</small>
                    </div>

                    <nav class="nav flex-column config-nav">
                        <a class="nav-link config-nav-link active" href="#editar-perfil" data-bs-toggle="tab">
                            <div class="nav-icon">
                                <i class="fas fa-user-edit"></i>
                            </div>
                            <span>Editar Perfil</span>
                        </a>
                        <a class="nav-link config-nav-link" href="#plataformas" data-bs-toggle="tab">
                            <div class="nav-icon">
                                <i class="fas fa-gamepad"></i>
                            </div>
                            <span>Plataformas</span>
                        </a>
                        <a class="nav-link config-nav-link" href="#seguridad" data-bs-toggle="tab">
                            <div class="nav-icon">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <span>Seguridad</span>
                        </a>
                        <div class="nav-divider"></div>
                        <a class="nav-link config-nav-link danger-link" href="#zona-peligrosa" data-bs-toggle="tab">
                            <div class="nav-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <span>Zona Peligrosa</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Contenido Principal Mejorado -->
        <div class="col-md-9">
            <div class="tab-content config-content">
                <!-- Pestaña: Editar Perfil -->
                <div class="tab-pane fade show active" id="editar-perfil">
                    <div class="config-card">
                        <div class="card-header config-card-header">
                            <div class="header-icon">
                                <i class="fas fa-user-edit"></i>
                            </div>
                            <h4 class="config-title">Información Personal</h4>
                        </div>
                        <div class="card-body">
                            <form asp-action="ActualizarPerfil" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                
                                <!-- Avatar Section -->
                                <div class="avatar-upload-section mb-5">
                                    <div class="avatar-preview-container">
                                        @if (!string.IsNullOrEmpty(Model.FotoPerfilUrl))
                                        {
                                            <div class="avatar-wrapper">
                                                <img src="@Model.FotoPerfilUrl" class="avatar-preview-img" id="avatarPreview" alt="Avatar">
                                                <div class="avatar-overlay">
                                                    <i class="fas fa-camera"></i>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="avatar-wrapper placeholder" id="avatarPreview">
                                                <div class="avatar-placeholder-large">
                                                    <i class="fas fa-user fa-3x"></i>
                                                </div>
                                                <div class="avatar-overlay">
                                                    <i class="fas fa-camera"></i>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <div class="avatar-controls">
                                        <label for="fotoPerfil" class="btn btn-primary btn-avatar">
                                            <i class="fas fa-upload me-2"></i>Subir nueva foto
                                        </label>
                                        <input type="file" asp-for="FotoPerfil" id="fotoPerfil" class="d-none" accept="image/*">
                                        <button type="button" class="btn btn-secondary btn-avatar" onclick="resetAvatar()">
                                            <i class="fas fa-sync me-2"></i>Restablecer
                                        </button>
                                    </div>
                                </div>

                                <!-- Información Básica -->
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Nombre de usuario *</label>
                                            <div class="input-with-icon">
                                                <i class="fas fa-at"></i>
                                                <input type="text" asp-for="UserName" class="form-control config-input" 
                                                    placeholder="Ej: iSebasFR" value="@Model.UserName">
                                            </div>
                                            <span asp-validation-for="UserName" class="text-danger small"></span>
                                            <small class="form-hint">Este será tu nombre público en la plataforma</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Nombre real</label>
                                            <div class="input-with-icon">
                                                <i class="fas fa-user"></i>
                                                <input type="text" asp-for="NombreReal" class="form-control config-input" 
                                                    placeholder="Ej: Sebastian Fernandez" value="@Model.NombreReal">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-3 mt-2">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Correo electrónico</label>
                                            <div class="input-with-icon">
                                                <i class="fas fa-envelope"></i>
                                                <input type="email" value="@Model.Email" class="form-control config-input" readonly disabled>
                                            </div>
                                            <small class="form-hint">El email no se puede modificar</small>
                                            <input type="hidden" asp-for="Email">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Fecha de nacimiento</label>
                                            <div class="input-with-icon">
                                                <i class="fas fa-calendar"></i>
                                                <input type="date" asp-for="FechaNacimiento" class="form-control config-input" 
                                                    value="@(Model.FechaNacimiento?.ToString("yyyy-MM-dd"))">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group mt-4">
                                    <label class="form-label">Biografía</label>
                                    <div class="bio-container">
                                        <textarea asp-for="Biografia" class="form-control config-input bio-textarea" rows="4" 
                                                  placeholder="Cuéntanos sobre ti, tus juegos favoritos, género preferido...">@Model.Biografia</textarea>
                                        <div class="bio-counter">
                                            <span class="char-count">@(Model.Biografia?.Length ?? 0)</span>/500 caracteres
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group mt-4">
                                    <label class="form-label">País</label>
                                    <div class="input-with-icon">
                                        <i class="fas fa-globe"></i>
                                        <select asp-for="Pais" class="form-select config-input">
                                            <option value="">Seleccionar país</option>
                                            <option value="Argentina">Argentina</option>
                                            <option value="Chile">Chile</option>
                                            <option value="Colombia">Colombia</option>
                                            <option value="España">España</option>
                                            <option value="México">México</option>
                                            <option value="Perú">Perú</option>
                                            <option value="Estados Unidos">Estados Unidos</option>
                                            <option value="Otro">Otro</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-actions mt-5">
                                    <button type="submit" class="btn btn-primary btn-save">
                                        <i class="fas fa-save me-2"></i>Guardar cambios
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Pestaña: Plataformas Preferidas -->
                <div class="tab-pane fade" id="plataformas">
                    <div class="config-card">
                        <div class="card-header config-card-header">
                            <div class="header-icon">
                                <i class="fas fa-gamepad"></i>
                            </div>
                            <h4 class="config-title">Plataformas Preferidas</h4>
                        </div>
                        <div class="card-body">
                            <p class="config-description">Selecciona tus plataformas de juego preferidas para personalizar tu experiencia.</p>
                            
                            <form asp-action="ActualizarPlataformas" method="post" id="plataformasForm">
                                @Html.AntiForgeryToken()
                                
                                <div class="platforms-grid">
                                    @foreach (var plataforma in Model.PlataformasPreferidas)
                                    {
                                        <div class="platform-card @(plataforma.Seleccionada ? "selected" : "")" 
                                             data-platform="@plataforma.Id">
                                            <input type="checkbox" name="plataformasSeleccionadas" value="@plataforma.Id" 
                                                   id="platform-@plataforma.Id" @(plataforma.Seleccionada ? "checked" : "") class="d-none">
                                            <label for="platform-@plataforma.Id" class="platform-label">
                                                <div class="platform-icon">
                                                    <i class="fab @GetPlatformIcon(plataforma.Id)"></i>
                                                </div>
                                                <div class="platform-info">
                                                    <h6 class="platform-name">@plataforma.Nombre</h6>
                                                    <small class="platform-desc">@GetPlatformDescription(plataforma.Id)</small>
                                                </div>
                                                <div class="platform-check">
                                                    <i class="fas fa-check"></i>
                                                </div>
                                            </label>
                                        </div>
                                    }
                                </div>

                                <div class="form-actions mt-4">
                                    <button type="submit" class="btn btn-primary btn-save">
                                        <i class="fas fa-save me-2"></i>Guardar plataformas
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Pestaña: Seguridad y Privacidad -->
                <div class="tab-pane fade" id="seguridad">
                    <div class="config-card">
                        <div class="card-header config-card-header">
                            <div class="header-icon">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <h4 class="config-title">Configuración de Seguridad</h4>
                        </div>
                        <div class="card-body">
                            <!-- Cambiar Contraseña -->
                            <div class="security-section">
                                <h5 class="security-title">
                                    <i class="fas fa-key me-2"></i>Cambiar Contraseña
                                </h5>
                                <form asp-action="CambiarContrasena" method="post" id="passwordForm">
                                    @Html.AntiForgeryToken()
                                    
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">Contraseña actual</label>
                                                <div class="password-input-group">
                                                    <i class="fas fa-lock"></i>
                                                    <input type="password" name="currentPassword" class="form-control config-input" 
                                                           placeholder="Ingresa tu contraseña actual">
                                                    <button type="button" class="btn btn-toggle-password">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row g-3 mt-2">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">Nueva contraseña</label>
                                                <div class="password-input-group">
                                                    <i class="fas fa-lock"></i>
                                                    <input type="password" name="newPassword" class="form-control config-input" 
                                                           placeholder="Ingresa nueva contraseña">
                                                    <button type="button" class="btn btn-toggle-password">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">Confirmar nueva contraseña</label>
                                                <div class="password-input-group">
                                                    <i class="fas fa-lock"></i>
                                                    <input type="password" name="confirmPassword" class="form-control config-input" 
                                                           placeholder="Confirma nueva contraseña">
                                                    <button type="button" class="btn btn-toggle-password">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-actions mt-4">
                                        <button type="submit" class="btn btn-primary btn-save">
                                            <i class="fas fa-key me-2"></i>Cambiar contraseña
                                        </button>
                                    </div>
                                </form>
                            </div>

                            <!-- Cerrar Sesión -->
                            <div class="security-section logout-section">
                                <h5 class="security-title">
                                    <i class="fas fa-sign-out-alt me-2"></i>Sesión
                                </h5>
                                <div class="logout-content">
                                    <div class="logout-info">
                                        <h6 class="logout-title">Cerrar sesión en todos los dispositivos</h6>
                                        <p class="logout-desc">Terminará tu sesión en este y todos los demás dispositivos.</p>
                                    </div>
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                        <button type="submit" class="btn btn-warning btn-logout">
                                            <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pestaña: Zona Peligrosa -->
                <div class="tab-pane fade" id="zona-peligrosa">
                    <div class="config-card danger-card">
                        <div class="card-header config-card-header danger-header">
                            <div class="header-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <h4 class="config-title">Zona Peligrosa</h4>
                        </div>
                        <div class="card-body">
                            <div class="danger-warning text-center mb-5">
                                <div class="danger-icon">
                                    <i class="fas fa-skull-crossbones"></i>
                                </div>
                                <h3 class="danger-title">¡Precaución!</h3>
                                <p class="danger-text">Esta acción es irreversible. Por favor, procede con precaución.</p>
                            </div>

                            <!-- Eliminar Cuenta -->
                            <div class="danger-section">
                                <h5 class="danger-section-title">Eliminar Cuenta Permanentemente</h5>
                                <div class="danger-alert">
                                    <i class="fas fa-info-circle"></i>
                                    <p>
                                        Una vez que elimines tu cuenta, no podrás recuperarla. Se perderán todos tus datos, 
                                        incluyendo tu biblioteca de juegos, reseñas y estadísticas.
                                    </p>
                                </div>
                                
                                <form asp-action="EliminarCuenta" method="post" id="deleteAccountForm" onsubmit="return confirmDelete()">
                                    @Html.AntiForgeryToken()
                                    
                                    <div class="form-group mt-4">
                                        <label class="form-label danger-label">
                                            Escribe <strong class="confirm-text">ELIMINAR</strong> para confirmar:
                                        </label>
                                        <div class="confirm-input-group">
                                            <input type="text" name="confirmacion" class="form-control config-input danger-input" 
                                                   placeholder="ELIMINAR" required>
                                        </div>
                                    </div>

                                    <div class="form-actions mt-4">
                                        <button type="submit" class="btn btn-danger btn-delete">
                                            <i class="fas fa-trash me-2"></i>Eliminar Cuenta Permanentemente
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Preview de avatar
        document.getElementById('fotoPerfil').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('avatarPreview');
                    preview.innerHTML = `
                        <img src="${e.target.result}" class="avatar-preview-img" alt="Preview">
                        <div class="avatar-overlay">
                            <i class="fas fa-camera"></i>
                        </div>
                    `;
                    preview.classList.remove('placeholder');
                }
                reader.readAsDataURL(file);
            }
        });

        function resetAvatar() {
            const preview = document.getElementById('avatarPreview');
            preview.innerHTML = `
                <div class="avatar-placeholder-large">
                    <i class="fas fa-user fa-3x"></i>
                </div>
                <div class="avatar-overlay">
                    <i class="fas fa-camera"></i>
                </div>
            `;
            preview.classList.add('placeholder');
            document.getElementById('fotoPerfil').value = '';
        }

        // Toggle password visibility
        document.querySelectorAll('.btn-toggle-password').forEach(button => {
            button.addEventListener('click', function() {
                const input = this.parentElement.querySelector('input');
                const icon = this.querySelector('i');
                
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        });

        // Platform selection with animation
        document.querySelectorAll('.platform-card').forEach(card => {
            card.addEventListener('click', function() {
                const checkbox = this.querySelector('input[type="checkbox"]');
                checkbox.checked = !checkbox.checked;
                this.classList.toggle('selected');
                
                // Add ripple effect
                const ripple = document.createElement('span');
                ripple.classList.add('platform-ripple');
                this.appendChild(ripple);
                
                setTimeout(() => {
                    ripple.remove();
                }, 600);
            });
        });

        // Tab navigation with smooth transitions
        document.querySelectorAll('.config-nav-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const target = this.getAttribute('href');
                
                // Update active states
                document.querySelectorAll('.config-nav-link').forEach(nav => {
                    nav.classList.remove('active');
                });
                this.classList.add('active');
                
                // Show target tab with fade
                document.querySelectorAll('.tab-pane').forEach(tab => {
                    tab.classList.remove('show', 'active');
                });
                document.querySelector(target).classList.add('show', 'active');
            });
        });

        // Character counter for bio
        const bioTextarea = document.querySelector('.bio-textarea');
        if (bioTextarea) {
            bioTextarea.addEventListener('input', function() {
                const counter = this.parentElement.querySelector('.char-count');
                counter.textContent = this.value.length;
            });
        }

        function confirmDelete() {
            const confirmation = document.querySelector('input[name="confirmacion"]').value;
            if (confirmation.toLowerCase() !== 'eliminar') {
                alert('Debes escribir "ELIMINAR" para confirmar la eliminación.');
                return false;
            }
            return confirm('¿Estás absolutamente seguro? Esta acción no se puede deshacer.');
        }

        // Add hover effects to platform cards
        document.querySelectorAll('.platform-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
}

@functions {
    private string GetPlatformIcon(string platformId)
    {
        return platformId switch
        {
            "pc" => "fa-windows",
            "playstation" => "fa-playstation",
            "xbox" => "fa-xbox",
            "nintendo" => "fa-gamepad",
            "mobile" => "fa-mobile-alt",
            _ => "fa-gamepad"
        };
    }

    private string GetPlatformDescription(string platformId)
    {
        return platformId switch
        {
            "pc" => "Computadora personal",
            "playstation" => "Consola PlayStation",
            "xbox" => "Consola Xbox",
            "nintendo" => "Consola Nintendo",
            "mobile" => "Dispositivos móviles",
            _ => "Plataforma de juego"
        };
    }
}

@section Styles {
    <style>
        /* PALETA DE COLORES GAMING */
        :root {
            --bg-dark: #070714;
            --bg-primary: #0f0f1f;
            --card-bg: #151530;
            --accent-purple: #8b2ce6;
            --accent-blue: #2c5be6;
            --neon-purple: #b042ff;
            --neon-blue: #428bff;
            --text-primary: #ffffff;
            --text-secondary: #b8b8d0;
            --success-green: #06d6a0;
            --danger-red: #dc3545;
            --warning-orange: #ff9e1a;
        }

        .config-container {
            background: var(--bg-dark);
            min-height: 100vh;
            padding: 2rem 0;
        }

        /* SIDEBAR MEJORADO */
        .config-sidebar {
            background: var(--card-bg) !important;
            border: 1px solid rgba(139, 44, 230, 0.3);
            border-radius: 15px;
            backdrop-filter: blur(10px);
            position: sticky;
            top: 20px;
            box-shadow: 0 8px 32px rgba(139, 44, 230, 0.1);
        }

        .avatar-container {
            position: relative;
            display: inline-block;
        }

        .avatar-img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--neon-purple);
            box-shadow: 0 0 20px rgba(139, 44, 230, 0.4);
        }

        .avatar-placeholder {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--accent-purple), var(--accent-blue));
            display: flex;
            align-items: center;
            justify-content: center;
            border: 3px solid var(--neon-purple);
            box-shadow: 0 0 20px rgba(139, 44, 230, 0.4);
        }

        .avatar-status {
            position: absolute;
            bottom: 5px;
            right: 5px;
            width: 15px;
            height: 15px;
            border-radius: 50%;
            border: 2px solid var(--card-bg);
        }

        .avatar-status.online {
            background: var(--success-green);
            box-shadow: 0 0 10px rgba(6, 214, 160, 0.5);
        }

        .user-name {
            color: var(--text-primary);
            font-weight: 700;
            font-size: 1.1rem;
        }

        .user-since {
            color: var(--text-secondary);
            font-size: 0.85rem;
        }

        .config-nav {
            gap: 8px;
        }

        .config-nav-link {
            display: flex;
            align-items: center;
            padding: 12px 16px;
            color: var(--text-secondary);
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.3s ease;
            border: 1px solid transparent;
        }

        .config-nav-link:hover {
            color: var(--text-primary);
            background: rgba(139, 44, 230, 0.1);
            border-color: rgba(139, 44, 230, 0.3);
            transform: translateX(5px);
        }

        .config-nav-link.active {
            color: var(--text-primary);
            background: linear-gradient(135deg, rgba(139, 44, 230, 0.2), rgba(66, 139, 255, 0.2));
            border-color: var(--neon-purple);
            box-shadow: 0 0 15px rgba(139, 44, 230, 0.3);
        }

        .nav-icon {
            width: 20px;
            margin-right: 12px;
            text-align: center;
        }

        .nav-divider {
            height: 1px;
            background: rgba(255, 255, 255, 0.1);
            margin: 15px 0;
        }

        .config-nav-link.danger-link:hover,
        .config-nav-link.danger-link.active {
            background: rgba(220, 53, 69, 0.1);
            border-color: rgba(220, 53, 69, 0.3);
            box-shadow: 0 0 15px rgba(220, 53, 69, 0.3);
        }

        /* CONTENIDO PRINCIPAL */
        .config-card {
            background: var(--card-bg);
