<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Comunidad – Grupos</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">

  <style>
    :root{
      --grad1:#6a00ff; --grad2:#ff3aa3;
      --bg1:#0a0f1f; --bg2:#081a2b;
      --text:#e9e9ef; --muted:#cfd2dc;
      --card:#ffffff14; --card2:#ffffff22;
      --radius:18px; --shadow:0 10px 30px rgba(0,0,0,.35);
    }
    body{
      color:var(--text);
      background:
        radial-gradient(1200px 600px at 80% 10%, #43136b55 0%, transparent 55%),
        radial-gradient(1200px 600px at 20% 30%, #0b57d455 0%, transparent 60%),
        linear-gradient(160deg, var(--bg1) 0%, var(--bg2) 100%);
      min-height:100vh;
    }
    .navbar-gaming{background:#00000055 !important; backdrop-filter: blur(6px); border-bottom:1px solid #ffffff22;}
    .navbar-gaming .nav-link{color:#ddd !important;}
    .navbar-gaming .nav-link.active,.navbar-gaming .nav-link:hover{color:#fff !important;}

    .glass{background:var(--card); border:1px solid var(--card2); border-radius:var(--radius); box-shadow:var(--shadow)}
    .pill{height:10px;border-radius:999px;background:linear-gradient(90deg,var(--grad1),var(--grad2));box-shadow:var(--shadow);opacity:.9}
    .chip{padding:8px 14px;border-radius:999px;background:#ffffff20;font-weight:700}
    .search{background:#ffffff1a;border:1px solid #ffffff30;border-radius:999px;padding:6px 10px;display:flex;align-items:center;gap:8px}
    .search input{background:transparent;border:0;color:#fff;outline:0;width:160px}

    .card-groupx{background:#ffffff12;border:1px solid #ffffff22;border-radius:16px;overflow:hidden;box-shadow:var(--shadow)}
    .card-groupx img{width:100%;height:180px;object-fit:cover}
    .tag{background:#ff3aa355;padding:.2rem .55rem;border-radius:999px;font-weight:700;font-size:.8rem;margin-right:.3rem}
    .btn-join{background:linear-gradient(90deg,#6a00ff,#ff3aa3);border:none;color:#fff;font-weight:700;border-radius:8px;padding:.35rem .9rem}
  </style>
</head>
<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-gaming">
    <div class="container-fluid">
      <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="fas fa-gamepad me-2"></i>GAMING</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fas fa-home me-2"></i>Inicio</a></li>
          <li class="nav-item"><a class="nav-link active" asp-controller="Comunidad" asp-action="Index"><i class="fas fa-users me-2"></i>Comunidad</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Rankings" asp-action="Index"><i class="fas fa-trophy me-2"></i>Rankings</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Estadisticas" asp-action="Index"><i class="fas fa-chart-line me-2"></i>Estadísticas</a></li>
        </ul>
        <div class="user-actions">
          <a class="btn btn-sm btn-outline-light me-2" asp-controller="Auth" asp-action="Login"><i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión</a>
          <a class="btn btn-sm btn-light text-dark" asp-controller="Auth" asp-action="Register"><i class="fas fa-user-plus me-2"></i>Registrarse</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- CONTENIDO -->
  <div class="container py-3">
    <!-- Barra superior -->
    <div class="d-flex align-items-center gap-2 flex-wrap mb-3">
      <div class="pill flex-grow-1" aria-hidden="true"></div>
      <span class="chip">Feed</span>
      <span class="chip">Amigos</span>
      <span class="chip">Grupos</span>
      <form class="search ms-auto" role="search">
        <i class="fas fa-search"></i>
        <input type="search" placeholder="Buscar grupos..." />
      </form>
    </div>

    <div class="row g-3">
      <!-- Sidebar -->
      <div class="col-lg-3">
        <div class="glass p-3 h-100">
          <h5 class="mb-3"><i class="fas fa-users me-2"></i>Grupos</h5>
          <form class="mb-3">
            <input type="text" class="form-control bg-dark text-white border-0" placeholder="Buscar..." />
          </form>
          <div class="list-group list-group-flush">
            <a href="#" class="list-group-item list-group-item-action bg-transparent text-white">Todos los grupos</a>
            <a href="#" class="list-group-item list-group-item-action bg-transparent text-white">Mis grupos</a>
            <a asp-controller="Comunidad" asp-action="CrearGrupo" class="list-group-item list-group-item-action bg-transparent text-white">+ Crear grupo</a>
          </div>
        </div>
      </div>

      <!-- Grid de grupos -->
      <div class="col-lg-9">
        <div class="glass p-3">
          <h5 class="mb-3">Grupos recomendados</h5>
          <div class="row g-3">

            <div class="col-md-6">
              <div class="card-groupx">
                <img src="https://placehold.co/600x400/6a00ff/fff?text=Grupo+1" alt="Grupo 1">
                <div class="p-3">
                  <h6 class="fw-bold">LO MEGA DIOSE</h6>
                  <p class="mb-2"><span class="tag">28k miembros</span><span class="tag">Activos</span></p>
                  <button class="btn-join">Unirse</button>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="card-groupx">
                <img src="https://placehold.co/600x400/ff3aa3/fff?text=Grupo+2" alt="Grupo 2">
                <div class="p-3">
                  <h6 class="fw-bold">GameSphere España</h6>
                  <p class="mb-2"><span class="tag">7.5k miembros</span></p>
                  <button class="btn-join">Unirse</button>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="card-groupx">
                <img src="https://placehold.co/600x400/333/fff?text=Grupo+3" alt="Grupo 3">
                <div class="p-3">
                  <h6 class="fw-bold">Estrategia Total</h6>
                  <p class="mb-2"><span class="tag">900 miembros</span></p>
                  <button class="btn-join">Unirse</button>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="card-groupx">
                <img src="https://placehold.co/600x400/222/fff?text=Grupo+4" alt="Grupo 4">
                <div class="p-3">
                  <h6 class="fw-bold">RPG Masters</h6>
                  <p class="mb-2"><span class="tag">22k miembros</span></p>
                  <button class="btn-join">Unirse</button>
                </div>
              </div>
            </div>

          </div><!-- /row -->
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
