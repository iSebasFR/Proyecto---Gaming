      <span class="chip">Feed</span>
      <span class="chip">Amigos</span>
      <span class="chip">Grupos</span>
      <div class="search ms-auto">
        <i class="fas fa-search"></i>
        <input type="search" placeholder="Buscar..." />
      </div>
    </div>

    <!-- Hero -->
