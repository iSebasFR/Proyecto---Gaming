<body>

  <!-- NAVBAR (tu mismo bloque tal cual) -->
  <nav class="navbar navbar-expand-lg navbar-gaming">
    <div class="container-fluid">
      <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
        <i class="fas fa-gamepad me-2"></i>GAMING
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
              <i class="fas fa-home me-2"></i>Inicio
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" asp-area="" asp-controller="Comunidad" asp-action="Index">
              <i class="fas fa-users me-2"></i>Comunidad
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Rankings" asp-action="Index">
              <i class="fas fa-trophy me-2"></i>Rankings
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Estadisticas" asp-action="Index">
              <i class="fas fa-chart-line me-2"></i>Estadísticas
            </a>
          </li>
        </ul>
        <div class="user-actions">
          <a class="user-btn btn-login btn btn-sm btn-outline-light" asp-area="" asp-controller="Auth" asp-action="Login">
            <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
          </a>
          <a class="user-btn btn btn-sm btn-light text-dark" asp-area="" asp-controller="Auth" asp-action="Register">
            <i class="fas fa-user-plus me-2"></i>Registrarse
          </a>
        </div>
      </div>
    </div>
  </nav>

