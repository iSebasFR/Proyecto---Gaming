      background:url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="900" height="500"><defs><linearGradient id="g" x1="0" y1="0" x2="1" y2="1"><stop offset="0" stop-color="%236a00ff"/><stop offset="1" stop-color="%23ff3aa3"/></linearGradient></defs><rect width="100%" height="100%" fill="%23000022"/><circle cx="520" cy="240" r="180" fill="url(%23g)" opacity="0.65"/><rect x="180" y="120" width="300" height="200" rx="16" fill="%23ffffff11" stroke="%23ffffff22"/></svg>') center/cover no-repeat;}

    /* Explore cards */
    .meta .tag{background:#ffffff18;padding:.4rem .75rem;border-radius:999px;font-weight:700;margin-right:.5rem}
    .btn-ghost{background:#ffffff20;border:1px solid #ffffff33;border-radius:10px;color:#fff;font-weight:700}
  </style>
