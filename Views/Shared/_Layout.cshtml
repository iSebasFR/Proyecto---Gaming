<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GAMING</title>
    
    <!-- Librerías CSS necesarias -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Renderizar la sección Styles -->
    @RenderSection("Styles", required: false)

    <style>
        /* PALETA DE COLORES */
        :root {
            --bg-dark: #070714;
            --bg-primary: #0f0f1f;
            --card-bg: #151530;
            --accent-purple: #8b2ce6;
            --accent-blue: #2c5be6;
            --neon-purple: #b042ff;
            --neon-blue: #428bff;
            --text-primary: #ffffff;
            --text-secondary: #b8b8d0;
            --navbar-bg: rgba(15, 15, 31, 0.95);
        }

        /* ESTILOS GENERALES */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Montserrat', 'Segoe UI', sans-serif;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-primary);
            min-height: 100vh;
            background-image: 
                radial-gradient(circle at 20% 30%, rgba(139, 44, 230, 0.15) 0%, transparent 40%),
                radial-gradient(circle at 80% 70%, rgba(44, 91, 230, 0.15) 0%, transparent 40%);
            display: flex;
            flex-direction: column;
            padding-top: 80px;
        }

        /* NAVBAR */
        .navbar-gaming {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: var(--navbar-bg) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(139, 44, 230, 0.3) !important;
            padding: 2px 0;
            z-index: 1000;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 2.2rem;
            background: linear-gradient(to right, var(--neon-purple), var(--neon-blue));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: 1.5px;
            padding: 0.5rem 0;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

        .navbar-brand:hover {
            transform: scale(1.05);
        }

        .navbar-nav .nav-link {
            color: var(--text-secondary) !important;
            font-weight: 600 !important;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            margin: 0 0.2rem;
            transition: all 0.3s ease;
            position: relative;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 3px;
            background: linear-gradient(to right, var(--accent-purple), var(--accent-blue));
            transition: width 0.3s;
            border-radius: 2px;
        }

        .nav-link:hover {
            color: var(--text-primary) !important;
            background: rgba(139, 44, 230, 0.15);
            transform: translateY(-2px);
        }

        .nav-link:hover::after {
            width: 80%;
        }

        /* ESTADO ACTIVO - SOLO CAMBIO DE COLOR SIN EFECTOS VISUALES */
        .nav-link.active {
            color: var(--text-primary) !important;
            transform: none !important;
        }

        /* BOTONES DE USUARIO */
        .user-btn {
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            margin-left: 0.5rem;
            text-transform: uppercase;
            font-size: 0.9rem;
            letter-spacing: 1px;
        }

        .btn-login {
            background: transparent;
            color: var(--text-secondary);
            border: 2px solid rgba(139, 44, 230, 0.3);
        }

        .btn-login:hover {
            border-color: var(--accent-purple);
            background: rgba(139, 44, 230, 0.1);
            color: var(--text-primary);
            transform: translateY(-2px);
        }

        .user-btn:not(.btn-login) {
            background: linear-gradient(135deg, var(--accent-purple), var(--accent-blue));
            color: white;
            border: none;
        }

        .user-btn:not(.btn-login):hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(139, 44, 230, 0.4);
        }

        /* PERFIL DE USUARIO */
        .profile-pic {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--accent-purple), var(--accent-blue));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            border: 2px solid rgba(255, 255, 255, 0.3);
            font-size: 1.2rem;
            transition: all 0.3s ease;
        }

        .profile-pic:hover {
            transform: scale(1.1);
            border-color: var(--accent-purple);
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .user-welcome {
            color: var(--text-secondary);
            font-weight: 600;
            margin-right: 10px;
        }

        /* DROPDOWN MENU */
        .dropdown-menu {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(139, 44, 230, 0.3);
            border-radius: 12px;
            padding: 0.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .dropdown-item {
            color: var(--text-secondary);
            padding: 0.7rem 1rem;
            transition: all 0.3s ease;
            border-radius: 6px;
            font-weight: 500;
            margin: 0.2rem 0;
        }

        .dropdown-item:hover {
            background: rgba(139, 44, 230, 0.2);
            color: var(--text-primary);
        }

        /* ALERTS */
        .alert-container {
            position: fixed;
            top: 100px;
            right: 20px;
            z-index: 1050;
            min-width: 300px;
        }

        /* FOOTER PRINCIPAL */
        .footer-gaming {
            background: var(--bg-primary);
            border-top: 1px solid rgba(139, 44, 230, 0.3);
            padding: 2rem 0;
            margin-top: auto;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .footer-left {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .footer-text {
            color: var(--text-secondary);
            margin: 0;
        }

        .footer-text a {
            color: var(--text-secondary);
            text-decoration: none;
            transition: color 0.3s;
        }

        .footer-text a:hover {
            color: var(--neon-purple);
        }

        /* BOTÓN CONTÁCTANOS EN FOOTER */
        .contact-toggle-btn {
            background: transparent;
            border: 2px solid rgba(139, 44, 230, 0.5);
            color: var(--text-secondary);
            font-weight: 600;
            padding: 8px 20px;
            border-radius: 6px;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            cursor: pointer;
        }

        .contact-toggle-btn:hover {
            background: rgba(139, 44, 230, 0.1);
            border-color: var(--accent-purple);
            color: var(--text-primary);
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgba(139, 44, 230, 0.3);
        }

        .contact-toggle-btn.active {
            background: rgba(139, 44, 230, 0.2);
            border-color: var(--accent-purple);
            color: var(--text-primary);
        }

        .social-links {
            display: flex;
            gap: 1rem;
        }

        .social-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(184, 184, 208, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-secondary);
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .social-icon:hover {
            background: linear-gradient(135deg, var(--accent-purple), var(--accent-blue));
            color: white;
            transform: translateY(-3px);
        }

        /* SECCIÓN DE CONTACTO EN FOOTER */
        .footer-contact {
            background: var(--card-bg);
            border-top: 1px solid rgba(139, 44, 230, 0.3);
            padding: 2rem 0;
            margin-top: 2rem;
        }

        /* CONTENEDOR DEL FORMULARIO */
        .contact-form-container {
            display: none;
        }

        .contact-form-container.show {
            display: block;
            animation: fadeInUp 0.4s ease-out;
        }

        

        /* CONTENEDOR PRINCIPAL */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* BOTÓN TOGGLER DEL NAVBAR */
        .navbar-toggler {
            border: 1px solid rgba(139, 44, 230, 0.3);
            color: var(--text-secondary);
        }

        .navbar-toggler:focus {
            box-shadow: 0 0 0 0.25rem rgba(139, 44, 230, 0.25);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-gaming">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-gamepad me-2"></i>GAMING
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white"><i class="fas fa-bars"></i></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
<ul class="navbar-nav me-auto mb-2 mb-lg-0">
    <!-- Opción Inicio - Siempre visible para todos -->
    <li class="nav-item">
