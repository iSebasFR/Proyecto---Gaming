                )"
               asp-area="AdminV2" asp-controller="Users" asp-action="Index">
                <i class="fas fa-users-cog me-2"></i>Gestión de Usuarios
            </a>
        </li>

        <!-- ✅ Nuevo enlace a Informes y Estadísticas -->
        <li class="nav-item">
            <a class="nav-link @(
                    ViewContext.RouteData.Values["area"]?.ToString() == "AdminV2" &&
                    ViewContext.RouteData.Values["controller"]?.ToString() == "Stats" ? "active" : ""
                )"
               asp-area="AdminV2" asp-controller="Stats" asp-action="Index">
                <i class="fas fa-chart-bar me-2"></i>Informes y Estadísticas
            </a>
        </li>
        <li class="nav-item">
    <a class="nav-link @(
            ViewContext.RouteData.Values["area"]?.ToString() == "AdminV2" &&
            ViewContext.RouteData.Values["controller"]?.ToString() == "Reviews" ? "active" : ""
        )"
       asp-area="AdminV2" asp-controller="Reviews" asp-action="Index">
        <i class="fa-solid fa-comments me-2"></i>Reseñas
    </a>
</li>


    }
    else if (User.Identity.IsAuthenticated)
    {
        <!-- Usuario normal (logueado NO admin): tu menú público -->
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Biblioteca" ? "active" : "")" 
               asp-area="" asp-controller="Biblioteca" asp-action="Index">
                <i class="fas fa-book me-2"></i>Biblioteca
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Comunidad" ? "active" : "")" 
               asp-area="" asp-controller="Comunidad" asp-action="Index">
                <i class="fas fa-users me-2"></i>Comunidad
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Estadisticas" ? "active" : "")" 
               asp-area="" asp-controller="Estadisticas" asp-action="Index">
                <i class="fas fa-chart-line me-2"></i>Estadísticas
            </a>
        </li>
    }
    <!-- Si no está logueado, no muestra ninguna opción adicional -->
</ul>


                    <!-- Verificación de autenticación con Identity -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Usuario logueado - Mostrar opciones de perfil -->
                        <div class="user-profile">
                            <span class="user-welcome d-none d-md-block">¡Hola, @User.Identity.Name!</span>
                            <div class="dropdown">
                                <button class="btn user-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="profile-pic">
                                        <i class="fas fa-user text-white"></i>
                                    </div>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Perfil" asp-action="Index"><i class="fas fa-user me-2"></i>Mi Perfil</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Configuracion" asp-action="Index"><i class="fas fa-cog me-2"></i>Configuración</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                                            <button type="submit" class="dropdown-item border-0 bg-transparent w-100 text-start">
                                                <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Usuario NO logueado - Mostrar botones de login/registro -->
                        <div class="user-actions">
                            <a class="user-btn btn-login" asp-area="Identity" asp-page="/Account/Login">
                                <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                            </a>
                            <a class="user-btn" asp-area="Identity" asp-page="/Account/Register">
                                <i class="fas fa-user-plus me-2"></i>Registrarse
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Container para mensajes temporales -->
    <div class="alert-container">
        @if (TempData["Ok"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Ok"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @{
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
        var isHomeIndex = currentController == "Home" && currentAction == "Index";
        var isAdmin = User.IsInRole("Admin");
    }

    @if (isHomeIndex && !isAdmin)
    {
        <!-- ==================== -->
        <!-- FOOTER CON FORMULARIO (SOLO PARA HOME/INDEX Y NO ADMIN) -->
        <!-- ==================== -->
        <footer class="footer-gaming">
            <div class="container">
                <div class="footer-content">
                    <div class="footer-left">
                        <p class="footer-text">&copy; 2025 - GAMING - <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidad</a></p>
                        <button class="contact-toggle-btn" id="contactToggleBtn">
                            <i class="fas fa-envelope me-2"></i>Contáctanos
                        </button>
                    </div>
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="fab fa-discord"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-steam"></i></a>
                    </div>
                </div>
            </div>
            
            <!-- SECCIÓN DEL FORMULARIO DE CONTACTO -->
            <div class="footer-contact">
                <div class="container">
                    <div class="contact-form-container" id="contactFormContainer">
                        @await Html.PartialAsync("_ContactFormPartial", new Proyecto_Gaming.ViewModels.ContactFormViewModel())
                    </div>
                </div>
            </div>
        </footer>
    }
    else
    {
        <!-- ==================== -->
        <!-- FOOTER NORMAL (PARA ADMIN Y OTRAS PÁGINAS) -->
        <!-- ==================== -->
        <footer class="footer-gaming">
            <div class="container">
                <div class="footer-content">
                    <div class="footer-left">
                        <p class="footer-text">&copy; 2025 - GAMING - <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidad</a></p>
                    </div>
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="fab fa-discord"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-steam"></i></a>
                    </div>
                </div>
            </div>
        </footer>
    }

    <!-- Librerías JavaScript necesarias -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Script para el formulario de contacto -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleBtn = document.getElementById('contactToggleBtn');
            const formContainer = document.getElementById('contactFormContainer');

            if (toggleBtn && formContainer) {
                toggleBtn.addEventListener('click', function() {
                    const isShowing = formContainer.classList.contains('show');
                    
                    if (isShowing) {
                        // Ocultar formulario
                        formContainer.classList.remove('show');
                        toggleBtn.classList.remove('active');
                        toggleBtn.innerHTML = '<i class="fas fa-envelope me-2"></i>Contáctanos';
                    } else {
                        // Mostrar formulario
                        formContainer.classList.add('show');
                        toggleBtn.classList.add('active');
                        toggleBtn.innerHTML = '<i class="fas fa-times me-2"></i>Cerrar';
                    }
                });
            }
        });

        // Script para auto-ocultar alerts
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>