<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GAMING</title>
    
    <!-- Librerías CSS necesarias -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Renderizar la sección Styles -->
    @await RenderSectionAsync("Styles", required: false)
    
    <style>
        :root {
            --primary: #6c5ce7;
            --primary-dark: #5649c7;
            --primary-gradient: linear-gradient(135deg, #6c5ce7 0%, #8a7dff 100%);
            --secondary: #a29bfe;
            --dark: #2d3436;
            --light: #f5f6fa;
            --accent: #fd79a8;
            --success: #00b894;
            --warning: #fdcb6e;
            --danger: #d63031;
            --card-bg: rgba(35, 40, 48, 0.9);
            --border-radius: 8px;
            --box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), 
                        url('https://images.unsplash.com/photo-1542751371-adc38448a05e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2000&q=80') no-repeat center center fixed;
            background-size: cover;
            color: var(--light);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar completa superior */
        .navbar-gaming {
            background: rgba(18, 20, 24, 0.98) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(108, 92, 231, 0.4) !important;
            padding: 0.5rem 1rem;
            width: 100%;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 2rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: 1.5px;
            padding: 0.5rem 0;
            display: flex;
            align-items: center;
        }

        .navbar-brand span {
            font-size: 1rem;
            margin-left: 10px;
            background: rgba(255, 255, 255, 0.7);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 500;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.85) !important;
            font-weight: 600;
            transition: var(--transition);
            margin: 0 8px;
            border-radius: var(--border-radius);
            padding: 0.8rem 1.2rem !important;
            position: relative;
            font-size: 1.1rem;
        }

        .nav-link:hover, .nav-link.active {
            color: var(--primary) !important;
            background: rgba(108, 92, 231, 0.15);
        }

        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 3px;
            background: var(--primary-gradient);
            transition: var(--transition);
            transform: translateX(-50%);
            border-radius: 10px;
        }

        .nav-link:hover::after, .nav-link.active::after {
            width: 70%;
        }

        .navbar-toggler {
            border: 1px solid rgba(108, 92, 231, 0.4);
            padding: 0.5rem;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(162, 155, 254, 0.8)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        .user-actions {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .user-btn {
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 255, 255, 0.2);
            color: var(--light);
            border-radius: var(--border-radius);
            padding: 10px 20px;
            transition: var(--transition);
            text-decoration: none;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .user-btn:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 92, 231, 0.3);
        }

        .user-btn.btn-login {
            background: var(--primary-gradient);
            border: none;
        }

        .user-btn.btn-login:hover {
            background: linear-gradient(135deg, #6152d3 0%, #7c6cf7 100%);
        }

        /* Contenido principal */
        .container {
            flex: 1;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        main {
            padding: 20px 0;
        }

        /* Footer completo inferior */
        .footer-gaming {
            background: rgba(18, 20, 24, 0.98);
            backdrop-filter: blur(10px);
            border-top: 1px solid rgba(108, 92, 231, 0.4);
            color: rgba(255, 255, 255, 0.7);
            padding: 2rem 0;
            margin-top: auto;
            width: 100%;
        }

        .footer-gaming a {
            color: var(--secondary);
            text-decoration: none;
            transition: var(--transition);
        }

        .footer-gaming a:hover {
            color: var(--primary);
            text-decoration: underline;
        }

        .social-links {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-top: 1rem;
        }

        .social-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            transition: var(--transition);
            color: var(--light);
            text-decoration: none;
        }

        .social-icon:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-3px);
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .navbar-brand {
                font-size: 1.7rem;
            }
            
            .navbar-brand span {
                font-size: 0.9rem;
            }
            
            .nav-link {
                padding: 0.7rem 1rem !important;
                margin: 2px 0;
            }
            
            .user-actions {
                margin-top: 15px;
                justify-content: center;
                flex-direction: column;
                width: 100%;
            }
            
            .user-btn {
                width: 100%;
                justify-content: center;
            }
        }

        @@media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.5rem;
            }
            
            .navbar-brand span {
                display: none;
            }
            
            .footer-gaming .row {
                text-align: center;
            }
            
            .social-links {
                justify-content: center;
            }
        }

        @@media (max-width: 576px) {
            .navbar-brand {
                font-size: 1.3rem;
            }
            
            .nav-link {
                font-size: 1rem;
                padding: 0.6rem 0.8rem !important;
            }
            
            .footer-gaming {
                padding: 1.5rem 0;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-gaming">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-gamepad me-2"></i>GAMING
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i>Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Biblioteca" asp-action="Index">
                                <i class="fas fa-book me-2"></i>Biblioteca
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Comunidad" asp-action="Index">
                                <i class="fas fa-users me-2"></i>Comunidad
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Rankings" asp-action="Index">
                                <i class="fas fa-trophy me-2"></i>Rankings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Estadisticas" asp-action="Index">
                                <i class="fas fa-chart-line me-2"></i>Estadísticas
                            </a>
                        </li>
                    </ul>
                    <div class="user-actions">
                        <a class="user-btn btn-login" asp-area="" asp-controller="Auth" asp-action="Login">
                            <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                        </a>
                        <a class="user-btn" asp-area="" asp-controller="Auth" asp-action="Register">
                            <i class="fas fa-user-plus me-2"></i>Registrarse
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-gaming">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 - GAMING - <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidad</a></p>
                </div>
                <div class="col-md-6">
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="fab fa-discord"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-steam"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    
    <!-- Librerías JavaScript necesarias -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>