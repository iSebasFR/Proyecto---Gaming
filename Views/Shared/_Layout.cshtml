<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GAMING</title>
    
    <!-- Librerías CSS necesarias -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Renderizar la sección Styles -->
    @RenderSection("Styles", required: false)

    <style>
        /* (Mantén todos tus estilos CSS existentes igual) */
        :root {
            --primary: #6c5ce7;
            --primary-dark: #5649c7;
            --primary-gradient: linear-gradient(135deg, #6c5ce7 0%, #8a7dff 100%);
            --secondary: #a29bfe;
            --dark: #2d3436;
            --light: #f5f6fa;
            --accent: #fd79a8;
            --success: #00b894;
            --warning: #fdcb6e;
            --danger: #d63031;
            --card-bg: rgba(35, 40, 48, 0.9);
            --border-radius: 12px;
            --box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            --transition: all 0.3s ease;
            --text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), 
                        url('https://images.unsplash.com/photo-1542751371-adc38448a05e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2000&q=80') no-repeat center center fixed;
            background-size: cover;
            color: var(--light);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* (Mantén todos los demás estilos igual) */
        .navbar-gaming {
            background: rgba(18, 20, 24, 0.98) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(108, 92, 231, 0.4) !important;
            padding: 0.8rem 1rem;
            width: 100%;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 2.2rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: 1.5px;
            padding: 0.5rem 0;
            display: flex;
            align-items: center;
            transition: var(--transition);
        }

        .navbar-brand:hover {
            transform: scale(1.05);
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: 600 !important;
            padding: 0.5rem 1rem !important;
            border-radius: var(--border-radius);
            margin: 0 0.2rem;
            transition: var(--transition);
        }

        .nav-link:hover, .nav-link.active {
            color: var(--primary) !important;
            background: rgba(108, 92, 231, 0.15);
            transform: translateY(-2px);
        }

        .user-btn {
            padding: 0.6rem 1.2rem;
            border-radius: var(--border-radius);
            font-weight: 600;
            text-decoration: none;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            margin-left: 0.5rem;
        }

        .btn-login {
            background: transparent;
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

        .btn-login:hover {
            border-color: var(--primary);
            background: rgba(108, 92, 231, 0.1);
            color: var(--primary);
            transform: translateY(-2px);
        }

        .user-btn:not(.btn-login) {
            background: var(--primary-gradient);
            color: white;
            border: none;
        }

        .user-btn:not(.btn-login):hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 92, 231, 0.4);
        }

        .profile-pic {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: var(--primary-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            border: 2px solid rgba(255, 255, 255, 0.3);
            font-size: 1.2rem;
            transition: var(--transition);
        }

        .profile-pic:hover {
            transform: scale(1.1);
            border-color: var(--primary);
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .user-welcome {
            color: white;
            font-weight: 600;
            margin-right: 10px;
        }

        .dropdown-menu {
            background: rgba(18, 20, 24, 0.98);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(108, 92, 231, 0.3);
            border-radius: var(--border-radius);
            padding: 0.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .dropdown-item {
            color: rgba(255, 255, 255, 0.8);
            padding: 0.7rem 1rem;
            transition: var(--transition);
            border-radius: 6px;
            font-weight: 500;
            margin: 0.2rem 0;
        }

        .dropdown-item:hover {
            background: rgba(108, 92, 231, 0.2);
            color: var(--primary);
        }

        .alert-container {
            position: fixed;
            top: 100px;
            right: 20px;
            z-index: 1050;
            min-width: 300px;
        }

        .footer-gaming {
            background: rgba(18, 20, 24, 0.98);
            border-top: 1px solid rgba(108, 92, 231, 0.3);
            padding: 2rem 0;
            margin-top: auto;
        }

        .social-links {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
        }

        .social-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-decoration: none;
            transition: var(--transition);
        }

        .social-icon:hover {
            background: var(--primary-gradient);
            transform: translateY(-3px);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-gaming">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-gamepad me-2"></i>GAMING
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white"><i class="fas fa-bars"></i></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Opciones visibles siempre -->
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i>Inicio
                            </a>
                        </li>

                        <!-- Estas opciones se mostrarán solo si el usuario está logueado -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Biblioteca" asp-action="Index">
                                    <i class="fas fa-book me-2"></i>Biblioteca
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Comunidad" asp-action="Index">
                                    <i class="fas fa-users me-2"></i>Comunidad
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Estadisticas" asp-action="Index">
                                    <i class="fas fa-chart-line me-2"></i>Estadísticas
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Verificación de autenticación con Identity -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Usuario logueado - Mostrar opciones de perfil -->
                        <div class="user-profile">
                            <span class="user-welcome d-none d-md-block">¡Hola, @User.Identity.Name!</span>
                            <div class="dropdown">
                                <button class="btn user-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="profile-pic">
                                        <i class="fas fa-user text-white"></i>
                                    </div>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Perfil" asp-action="Index"><i class="fas fa-user me-2"></i>Mi Perfil</a></li>
                                    <li><a class="dropdown-item" asp-controller="Configuracion" asp-action="Index"><i class="fas fa-cog me-2"></i>Configuración</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                                            <button type="submit" class="dropdown-item border-0 bg-transparent w-100 text-start">
                                                <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Usuario NO logueado - Mostrar botones de login/registro -->
                        <div class="user-actions">
                            <a class="user-btn btn-login" asp-area="Identity" asp-page="/Account/Login">
                                <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                            </a>
                            <a class="user-btn" asp-area="Identity" asp-page="/Account/Register">
                                <i class="fas fa-user-plus me-2"></i>Registrarse
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Container para mensajes temporales -->
    <div class="alert-container">
        @if (TempData["Ok"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Ok"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-gaming">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 - GAMING - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white-50">Política de Privacidad</a></p>
                </div>
                <div class="col-md-6">
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="fab fa-discord"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-steam"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Librerías JavaScript necesarias -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Script para auto-ocultar alerts -->
    <script>
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>